<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet author="Pavel_Senin" id="init_banks">
        <createTable tableName="banks">
            <column autoIncrement="true" name="id" type="BIGSERIAL">
                <constraints nullable="false" primaryKey="true" primaryKeyName="banks_pkey"/>
            </column>

            <column name="bic" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="latitude" type="NUMERIC(9,6)">
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="NUMERIC(9,6)">
                <constraints nullable="false"/>
            </column>

            <column name="address" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="geom" type="geometry(Point, 4326)">
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Alex" id="init_city">
        <createTable tableName="cities">
            <column autoIncrement="true" name="id" type="BIGSERIAL">
                <constraints nullable="false" primaryKey="true" primaryKeyName="cities_pkey"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="geom" type="geometry(Polygon, 4326)">
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Pavel_Senin" id="init_table_vsps">
        <createTable tableName="vsps">
            <column name="branch_code" type="VARCHAR(50)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="vsps_pkey"/>
            </column>

            <column name="branch_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="latitude_original" type="NUMERIC(9,6)">
                <constraints nullable="false"/>
            </column>
            <column name="longitude_original" type="NUMERIC(9,6)">
                <constraints nullable="false"/>
            </column>
            <column name="latitude_delta" type="NUMERIC(9,6)">
                <constraints nullable="false"/>
            </column>
            <column name="longitude_delta" type="NUMERIC(9,6)">
                <constraints nullable="false"/>
            </column>
            <column name="latitude_geocoded" type="NUMERIC(9,6)">
                <constraints nullable="false"/>
            </column>
            <column name="longitude_geocoded" type="NUMERIC(9,6)">
                <constraints nullable="false"/>
            </column>

            <column name="address_original" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="address_geocoded" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="post_index" type="VARCHAR(6)"/>

            <column name="geom" type="geometry(Point, 4326)"/>

        </createTable>
    </changeSet>

</databaseChangeLog>